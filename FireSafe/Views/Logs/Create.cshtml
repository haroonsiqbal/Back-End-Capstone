@model FireSafe.Models.CreateLogViewModel

@{
    ViewData["Title"] = "Add New Item";
}

<h1>New Item</h1>

<h4>Complete the information below to add a new item to your inventory.</h4> 
<h6>Note: Additional retailers can be added by clicking the Merchants link above.</h6>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Log.Name" class="control-label"></label>
                <input asp-for="Log.Name" class="form-control" />
                <span asp-validation-for="Log.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.Manufacturer" class="control-label"></label>
                <input asp-for="Log.Manufacturer" class="form-control" />
                <span asp-validation-for="Log.Manufacturer" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.Model" class="control-label"></label>
                <input asp-for="Log.Model" class="form-control" />
                <span asp-validation-for="Log.Model" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.CategoryId" class="control-label"></label>
                <select asp-for="Log.CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Log.Price" class="control-label"></label>
                <input asp-for="Log.Price" class="form-control" />
                <span asp-validation-for="Log.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.SellerId" class="control-label"></label>
                <select asp-for="Log.SellerId" class="form-control" asp-items="ViewBag.SellerId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Log.Quantity" class="control-label"></label>
                <input asp-for="Log.Quantity" class="form-control" />
                <span asp-validation-for="Log.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.PurchaseDate" class="control-label"></label>
                <input asp-for="Log.PurchaseDate" class="form-control" />
                <span asp-validation-for="Log.PurchaseDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Log.Comment" class="control-label"></label>
                <input asp-for="Log.Comment" class="form-control" />
                <span asp-validation-for="Log.Comment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="MyImage" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
